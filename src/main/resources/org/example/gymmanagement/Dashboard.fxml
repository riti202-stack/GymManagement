<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"

            style="-fx-background-color: #f4f6f9;" fx:controller="org.example.gymmanagement.DashboardController">


    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="20"
              style="-fx-background-color: #2c3e50;
                     -fx-padding: 15;">
            <Label text=" Gym Management System"
                   style="-fx-font-size: 20px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15"
              style="-fx-background-color: #34495e;
                     -fx-padding: 20;"
              prefWidth="200">

            <Label text="Dashboard"
                   style="-fx-text-fill: white;
                          -fx-font-size: 14px;" />

            <Label text="Members"
                   style="-fx-text-fill: white;
                          -fx-font-size: 14px;" />



            <Label text="Payments"
                   style="-fx-text-fill: white;
                          -fx-font-size: 14px;"
            />

            <Label text="Logout"
                   style="-fx-text-fill: #e74c3c;
                          -fx-font-size: 14px;"
                   fx:id="logout"
                   onMouseClicked="#handleLogout"
                   />
        </VBox>
    </left>


    <center>

            <VBox spacing="20"
                  style="-fx-padding: 25;">

                <Label text="Welcome Back"
                       style="-fx-font-size: 22px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

                <HBox spacing="20">

                    <StackPane prefWidth="220" prefHeight="120"
                               style="-fx-background-color: white;
                                  -fx-background-radius: 15;
                                  -fx-effect: drop shadow(gaussian, rgba(0,0,0,0.1), 10,0,0,5);">
                        <VBox alignment="CENTER" spacing="8">
                            <Label text=" Total Members"
                                   style="-fx-font-size: 14px;" />
                            <Label text="128"
                                   style="-fx-font-size: 22px;
                                      -fx-font-weight: bold;" />
                        </VBox>
                    </StackPane>


                    <StackPane prefWidth="220" prefHeight="120"
                               style="-fx-background-color: white;
                                  -fx-background-radius: 15;
                                  -fx-effect: drop shadow(gaussian, rgba(0,0,0,0.1), 10,0,0,5);">
                        <VBox alignment="CENTER" spacing="8">
                            <Label text=" Monthly Income"
                                   style="-fx-font-size: 14px;" />
                            <Label text="45,000"
                                   style="-fx-font-size: 22px;
                                      -fx-font-weight: bold;" />
                        </VBox>
                    </StackPane>




                </HBox>
            </VBox>

    </center>

</BorderPane>


