<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.gymmanagement.loginController"
           style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #4ca1af);">

    <!-- Login Card -->
    <VBox spacing="15"
          alignment="CENTER"
          prefWidth="350"

          maxWidth="380"
          maxHeight="380"
          style="-fx-background-color: white;
                 -fx-background-radius: 20;
                 -fx-padding: 30;">

        <Label text="GYM MANAGEMENT LOGIN"
               style="-fx-font-size: 18px;
                      -fx-font-weight: bold;"
         textFill="red"/>

        <TextField promptText="Username"
                   style="-fx-background-radius: 15;"
                   fx:id="usernameField"
        />

        <PasswordField promptText="Password"
                       style="-fx-background-radius: 15;"
                       fx:id="passwordField"
        />
        <Label fx:id="errorLabel"
               text=" "

               style="-fx-text-fill: red;" />

        <Button text="Login"
                prefWidth="120"
                style="-fx-background-radius: 15;
                       -fx-background-color: #4ca1af;
                       -fx-text-fill: white;"
                fx:id="loginBtn"
        onAction="#login"/>
    </VBox>

</StackPane>










